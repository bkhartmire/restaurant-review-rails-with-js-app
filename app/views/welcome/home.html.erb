<h1>Welcome to Restaurant World Critic!</h1>

<div id="browse bar">
  <select name="post[author_id]">
    <option value="">Browse By:</option>
    <option value="1" >Country (A-Z)</option>
    <option value="2">Country (Most)</option>
    <option value="3">City (A-Z)</option>
    <option value="4">City (Most)</option>
    <option value="5">Cuisine (A-Z)</option>
    <option value="6">Cuisine (Most)</option>
    <option value="6">View All (A-Z)</option>
  </select>
</div>
<div id="displayRestaurants">
  <% @countries.each do |country| %>
    <ul>
       <h3><%= link_to country.name, country_path(country) %> (<%= country.restaurants.count%>)</h3>

    </ul>
  <% end %>
  <br>
</div>
<% if !user_signed_in? %>
  <h5>Log In or Sign Up to track your dining experiences and post a review!</h5>
<% end %>
