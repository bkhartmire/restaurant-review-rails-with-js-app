<%= form_for(review) do |f| %>
  <% if review.restaurant && review.errors.any? %>
    <div id="error_explanation">
      <h2>
        Please fix the follwing <%= pluralize(review.errors.count, "error") %> with your review:
      </h2>
      <ul>
        <%= review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :restaurant_id %>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1...6 %><br>
  <%= f.text_area :content%><br>
  <%= f.submit %>
<% end %>
